{
	"extends": "../tsconfig.json",

	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"lib": ["dom", "dom.iterable", "esnext", "webworker"],

		"allowJs": true,

		"noEmit": true,
		"isolatedModules": true,
		"jsx": "preserve"
	},

	"include": ["next-env.d.ts", "./**/*.ts", "./**/*.tsx", "./**/*.json"],

	"exclude": [
		"node_modules",
		".next",
		"out",
		"next.config.js",
		"dist",
		"docs",
		"src/typings/vendor"
	]
}
