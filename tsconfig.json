{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",

		"lib": ["dom", "dom.iterable", "esnext", "webworker"],

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": false,

		"moduleResolution": "node",
		"esModuleInterop": true,

		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"allowJs": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",

		"baseUrl": ".",
		"paths": {
			"root/*": ["./*"],
			"web/*": ["./src/*"]
		},

		"typeRoots": ["./typings-vendor", "./node_modules/@types"]
	},

	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.json"],
	"exclude": [
		"node_modules",
		".next",
		"out",
		"next.config.js",
		"dist",
		"docs",
		"typings-vendor"
	],

	"typedocOptions": {
		"mode": "modules",
		"out": "docs",
		"name": "D-Zone",
		"gitRevision": "rewrite"
	}
}
